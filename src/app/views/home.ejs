<%- include('./partials/head.ejs') %>
<body>
    <%- include('partials/homeNavBar.ejs') %>

    <br />
    <div class="container">
        <br />
        <div class="jumbotron">
            <h1 class="display-4">Bem Vindo(a)</h1>
            <p class="lead">Este e um simples blog</p>
            <hr class="my-4" />
            <p class="lead">
                <a class="btn btn-primary btn-lg" href="#" role="button"
                    >Learn more</a
                >
            </p>
        </div>
        <% articles.forEach((article)=>{ %>
        <div class="card text-center">
            <div class="card-header">
                <h2 class="card-title"><%= article.title %></h2>
            </div>
            <div class="card-body">
                <p class="card-text"><%= article.categories.title %></p>
                <a href="/<%= article.slug %>" class="btn btn-primary"
                    >Saiba Mais</a
                >
            </div>
        </div>
        <% }) %>
    </div>
</body>
<%- include('partials/footer.ejs') %>
